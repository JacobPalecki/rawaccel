<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.MappingView"
             x:DataType="vm:MappingViewModel">
  <StackPanel>
    <TextBlock
      Text="{Binding MappingBE.Name.CurrentValidatedValue}"/>
    <ListBox
      ItemsSource="{Binding IndividualMappings}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel
            Orientation="Horizontal">
            <TextBlock
              Text="{Binding DeviceGroup.CurrentValidatedValue}"/>
            <TextBlock
              Text=" --> "/>
            <TextBlock
              Text="{Binding Profile.Name.CurrentValidatedValue}"/>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</UserControl>
