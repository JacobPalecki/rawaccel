<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.DeviceView"
             x:DataType="vm:DeviceViewModel">

  <Expander BorderThickness="1" BorderBrush="Gray" HorizontalAlignment="Stretch">

    <Expander.Header>
      <Grid ColumnDefinitions="2*,*,*,2*" HorizontalAlignment="Stretch">
        <ContentControl Content="{Binding NameField}" Grid.Column="0" Grid.Row="0"/>
        <ContentControl Content="{Binding DPIField}" Grid.Column="1" Grid.Row="0"/>
        <ContentControl Content="{Binding IgnoreBool}" Grid.Column="2" Grid.Row="0"/>
        <ContentControl Content="{Binding DeviceGroup}" Grid.Column="3" Grid.Row="0"/>
      </Grid>
    </Expander.Header>

    <Grid ColumnDefinitions="32,*,*" HorizontalAlignment="Stretch">
      <Button Click="DeleteSelf" Grid.Column="0" Grid.Row="0">
        <PathIcon Data="{StaticResource delete_regular}"/>
      </Button>
      <ContentControl Content="{Binding HWIDField}" Grid.Column="1" Grid.Row="0"/>
      <ContentControl Content="{Binding PollRateField}" Grid.Column="2" Grid.Row="0"/>
    </Grid>

  </Expander>
</UserControl>
