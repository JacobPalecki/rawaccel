<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels"
             xmlns:v="using:userinterface.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.DeviceView"
             x:DataType="vm:DeviceViewModel">
      <Border
        CornerRadius="5"
        BorderBrush="Gray" BorderThickness="1"
        Padding="10"
        Margin="0,0,0,0">
        <StackPanel Orientation="Horizontal" Spacing="10">
          <ContentControl Content="{Binding NameField}"/>
          <ContentControl Content="{Binding HWIDField}"/>
          <ContentControl Content="{Binding DPIField}"/>
          <ContentControl Content="{Binding PollRateField}"/>
          <TextBlock Margin="5,0,5,0">Ignore: false</TextBlock>
          <TextBlock Margin="5,0,5,0">Device Group: Device Group A</TextBlock>
        </StackPanel>
      </Border>
</UserControl>
