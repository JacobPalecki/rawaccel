<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:userinterface.Views"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.ProfilesPageView"
             x:DataType="vm:ProfilesPageViewModel">
   <Grid ColumnDefinitions="3*,*">

       <ContentControl Content="{Binding SelectedProfileView}"/>
     <Grid
       Grid.Row="0"
       Grid.Column="1"
       RowDefinitions="2*,*">
       <Border Margin="5,5,5,5"
         CornerRadius="5"
         BorderBrush="Gray" BorderThickness="1"
         Padding="5"
         Grid.Row="0"
         Grid.Column="0">
         <ContentControl Content="{Binding ProfileListView}"/>
       </Border>
       <Border Margin="5,5,5,5"
         CornerRadius="5"
         BorderBrush="Gray" BorderThickness="1"
         Padding="5"
         Grid.Row="1"
         Grid.Column="0">
         <ContentControl Content="{Binding ActiveProfilesListView}"/>
       </Border>
     </Grid>
   </Grid>
</UserControl>
