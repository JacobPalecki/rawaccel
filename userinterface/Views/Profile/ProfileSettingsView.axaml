<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:userinterface.Views"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.ProfileSettingsView"
             x:DataType="vm:ProfileSettingsViewModel">

	<UserControl.Styles>
		<Style Selector="ContentControl">
			<Setter Property="Margin" Value="0,0,0,12"/>
		</Style>
	</UserControl.Styles>

	<ScrollViewer>
		<StackPanel Orientation="Vertical"
					HorizontalAlignment="Stretch"
					Margin="16">
			<ContentControl Content="{Binding OutputDPIField}"/>
			<ContentControl Content="{Binding YXRatioField}"/>
			<ContentControl Content="{Binding AccelerationSettings}"/>
			<ContentControl Content="{Binding HiddenSettings}"/>
		</StackPanel>
	</ScrollViewer>
</UserControl>
