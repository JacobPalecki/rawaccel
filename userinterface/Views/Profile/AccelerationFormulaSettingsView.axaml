<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             xmlns:controls="using:userinterface.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.AccelerationFormulaSettingsView"
             x:DataType="vm:AccelerationFormulaSettingsViewModel">

	<UserControl.Styles>
		<Style Selector="ComboBox">
			<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="MinWidth" Value="120"/>
		</Style>
		<Style Selector="ComboBox:focus">
			<Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
		</Style>
		<Style Selector="ComboBox:pointerover">
			<Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
		</Style>
		<Style Selector="Carousel">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderBrush" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="6"/>
			<Setter Property="Padding" Value="16"/>
			<Setter Property="Margin" Value="0,12,0,0"/>
		</Style>
		<Style Selector="StackPanel.FormulaSettings">
			<Setter Property="Spacing" Value="12"/>
			<Setter Property="Background" Value="Transparent"/>
		</Style>
	</UserControl.Styles>

	<StackPanel Orientation="Vertical" Spacing="12">
		<controls:DualColumnLabelField Label="Formula Type">
			<controls:DualColumnLabelField.InputContent>
				<ComboBox HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding FormulaTypesLocal}"
                          SelectedItem="{Binding FormulaAccelBE.FormulaType.InterfaceValue}"/>
			</controls:DualColumnLabelField.InputContent>
		</controls:DualColumnLabelField>

		<Carousel Name="FormulaCarousel"
                  SelectedIndex="{Binding FormulaAccelBE.FormulaType.CurrentValidatedValue}">
			<Carousel.Items>
				<StackPanel Name="SynchronousFormulaSettings" Classes="FormulaSettings" Orientation="Vertical">
					<controls:DualColumnLabelField
                        Label="Sync Speed"
                        InputContent="{Binding SynchronousSettings.SyncSpeed}"/>
					<controls:DualColumnLabelField
                        Label="Motivity"
                        InputContent="{Binding SynchronousSettings.Motivity}"/>
					<controls:DualColumnLabelField
                        Label="Gamma"
                        InputContent="{Binding SynchronousSettings.Gamma}"/>
					<controls:DualColumnLabelField
                        Label="Smoothness"
                        InputContent="{Binding SynchronousSettings.Smoothness}"/>
				</StackPanel>

				<StackPanel Name="LinearFormulaSettings" Classes="FormulaSettings" Orientation="Vertical">
					<controls:DualColumnLabelField
                        Label="Acceleration"
                        InputContent="{Binding LinearSettings.Acceleration}"/>
					<controls:DualColumnLabelField
                        Label="Offset"
                        InputContent="{Binding LinearSettings.Offset}"/>
					<controls:DualColumnLabelField
                        Label="Cap"
                        InputContent="{Binding LinearSettings.Cap}"/>
				</StackPanel>

				<StackPanel Name="ClassicFormulaSettings" Classes="FormulaSettings" Orientation="Vertical">
					<controls:DualColumnLabelField
                        Label="Acceleration"
                        InputContent="{Binding ClassicSettings.Acceleration}"/>
					<controls:DualColumnLabelField
                        Label="Exponent"
                        InputContent="{Binding ClassicSettings.Exponent}"/>
					<controls:DualColumnLabelField
                        Label="Offset"
                        InputContent="{Binding ClassicSettings.Offset}"/>
					<controls:DualColumnLabelField
                        Label="Cap"
                        InputContent="{Binding ClassicSettings.Cap}"/>
				</StackPanel>

				<StackPanel Name="PowerFormulaSettings" Classes="FormulaSettings" Orientation="Vertical">
					<controls:DualColumnLabelField
                        Label="Scale"
                        InputContent="{Binding PowerSettings.Scale}"/>
					<controls:DualColumnLabelField
                        Label="Exponent"
                        InputContent="{Binding PowerSettings.Exponent}"/>
					<controls:DualColumnLabelField
                        Label="Output Offset"
                        InputContent="{Binding PowerSettings.OutputOffset}"/>
					<controls:DualColumnLabelField
                        Label="Cap"
                        InputContent="{Binding PowerSettings.Cap}"/>
				</StackPanel>

				<StackPanel Name="NaturalFormulaSettings" Classes="FormulaSettings" Orientation="Vertical">
					<controls:DualColumnLabelField
                        Label="Decay Rate"
                        InputContent="{Binding NaturalSettings.DecayRate}"/>
					<controls:DualColumnLabelField
                        Label="Input Offset"
                        InputContent="{Binding NaturalSettings.InputOffset}"/>
					<controls:DualColumnLabelField
                        Label="Limit"
                        InputContent="{Binding NaturalSettings.Limit}"/>
				</StackPanel>

				<StackPanel Name="JumpFormulaSettings" Classes="FormulaSettings" Orientation="Vertical">
					<controls:DualColumnLabelField
                        Label="Smooth"
                        InputContent="{Binding JumpSettings.Smooth}"/>
					<controls:DualColumnLabelField
                        Label="Input"
                        InputContent="{Binding JumpSettings.Input}"/>
					<controls:DualColumnLabelField
                        Label="Output"
                        InputContent="{Binding JumpSettings.Output}"/>
				</StackPanel>
			</Carousel.Items>
		</Carousel>
	</StackPanel>
</UserControl>
