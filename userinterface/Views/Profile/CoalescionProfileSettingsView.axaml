<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             xmlns:controls="using:userinterface.Controls"
             xmlns:localControls="using:userinterface.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.CoalescionProfileSettingsView"
             x:DataType="vm:CoalescionProfileSettingsViewModel">

	<controls:EditableExpanderView Header="Coalescion" HorizontalAlignment="Stretch" Margin="0,0,0,12">
		<controls:EditableExpanderView.ExpanderContent>
			<StackPanel Orientation="Vertical" Margin="16" Spacing="12">

				<localControls:DualColumnLabelField
                    Label="Input Smoothing Half Life"
                    InputContent="{Binding InputSmoothingHalfLife}"/>

				<localControls:DualColumnLabelField
                    Label="Scale Smoothing Half Life"
                    InputContent="{Binding ScaleSmoothingHalfLife}"/>

			</StackPanel>
		</controls:EditableExpanderView.ExpanderContent>
	</controls:EditableExpanderView>
</UserControl>
