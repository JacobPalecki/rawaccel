<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.ProfileChartView"
             x:DataType="vm:ProfileChartViewModel">

	<UserControl.Styles>
		<Style Selector="lvc|CartesianChart">
			<Setter Property="Background" Value="#1E1E1E"/>
			<Setter Property="Margin" Value="8"/>
		</Style>
	</UserControl.Styles>

	<Border Background="#252526"
			BorderBrush="#3F3F46"
			BorderThickness="1"
			CornerRadius="8">
		<lvc:CartesianChart Series="{Binding Series}" YAxes="{Binding YAxes}"/>
	</Border>
</UserControl>
