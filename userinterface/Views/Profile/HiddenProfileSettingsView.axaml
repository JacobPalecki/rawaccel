<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:userinterface.Views"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             xmlns:controls="using:userinterface.Controls"
             xmlns:localControls="using:userinterface.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.HiddenProfileSettingsView"
             x:DataType="vm:HiddenProfileSettingsViewModel">
	<UserControl.Styles>
		<!-- Base input control styling - applied to all input types -->
		<Style Selector="ComboBox, TextBox, NumericUpDown">
			<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="Height" Value="32"/>
		</Style>

		<Style Selector="ComboBox:focus, TextBox:focus, NumericUpDown:focus">
			<Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
		</Style>

		<Style Selector="ComboBox:pointerover, TextBox:pointerover, NumericUpDown:pointerover">
			<Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
		</Style>

		<Style Selector="ComboBox">
			<Setter Property="MaxDropDownHeight" Value="200"/>
		</Style>

		<Style Selector="ComboBox /template/ Popup#PART_Popup">
			<Setter Property="Placement" Value="BottomEdgeAlignedLeft"/>
			<Setter Property="HorizontalOffset" Value="0"/>
			<Setter Property="VerticalOffset" Value="0"/>
			<Setter Property="PlacementConstraintAdjustment" Value="SlideX,SlideY,ResizeX,ResizeY"/>
		</Style>

		<Style Selector="ComboBox /template/ Border#PART_PopupBorder">
			<Setter Property="MinWidth" Value="150"/>
			<Setter Property="MaxWidth" Value="300"/>
		</Style>

		<Style Selector="localControls|DualColumnLabelField ContentPresenter">
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
		</Style>
	</UserControl.Styles>

	<controls:EditableExpanderView Header="Hidden"
                                   HorizontalAlignment="Stretch"
                                   Margin="0,0,0,12">
		<controls:EditableExpanderView.ExpanderContent>
			<StackPanel Orientation="Vertical" Margin="16" Spacing="12">
				<localControls:DualColumnLabelField
                    Label="Rotation"
                    InputContent="{Binding RotationField}"/>
				<localControls:DualColumnLabelField
                    Label="LR Ratio"
                    InputContent="{Binding LRRatioField}"/>
				<localControls:DualColumnLabelField
                    Label="UD Ratio"
                    InputContent="{Binding UDRatioField}"/>
				<localControls:DualColumnLabelField
                    Label="Speed Cap"
                    InputContent="{Binding SpeedCapField}"/>
				<localControls:DualColumnLabelField
                    Label="Angle Snapping"
                    InputContent="{Binding AngleSnappingField}"/>
				<localControls:DualColumnLabelField
                    Label="Output Smoothing Half Life"
                    InputContent="{Binding OutputSmoothingHalfLifeField}"/>
			</StackPanel>
		</controls:EditableExpanderView.ExpanderContent>
	</controls:EditableExpanderView>
</UserControl>
