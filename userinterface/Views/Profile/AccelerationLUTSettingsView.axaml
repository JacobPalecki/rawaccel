<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Settings.AccelerationLUTSettingsView"
             x:DataType="vm:AccelerationLUTSettingsViewModel">
	 <StackPanel>
		 <TextBlock>This mode is for experts only.</TextBlock>
		 <TextBlock>Format: x1,y1,x2,y2,...xn,yn;</TextBlock>
		 <UserControl Content="{Binding LUTPoints}"
			 Height="100"
			 />
		 <StackPanel
			 Orientation="Horizontal">
			 <TextBlock>Apply as:</TextBlock>
			 <ComboBox>
				 <TextBlock>Velocity</TextBlock>
				 <TextBlock>Sensitivity</TextBlock>
			 </ComboBox>
		 </StackPanel>
	 </StackPanel>
</UserControl>
