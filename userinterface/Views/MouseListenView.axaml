<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.MouseListenView">
  <Grid ColumnDefinitions="Auto, Auto, Auto" RowDefinitions="Auto, Auto, Auto">
    <TextBlock Text="Last Mouse Move" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
    <TextBlock Text="X" Grid.Row="1" Grid.Column="0"/>
    <TextBlock Text="Y" Grid.Row="1" Grid.Column="1"/>
    <TextBlock Text="{Binding DisplayedLastX}" Grid.Row="2" Grid.Column="0"/>
    <TextBlock Text="{Binding DisplayedLastY}" Grid.Row="2" Grid.Column="1"/>
  </Grid>
</UserControl>
