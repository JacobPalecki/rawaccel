<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels"
             xmlns:v="using:userinterface.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.DevicesListView"
             x:DataType="vm:DevicesListViewModel">

  <StackPanel Orientation="Vertical">

    <TextBlock
      HorizontalAlignment="Left"
      FontSize="18"
      FontStyle="Italic"
      Margin="10,10,10,10">
      Devices
    </TextBlock>

    <ListBox
      Background="Black"
      Name="DevicesListInView"
      ItemsSource="{Binding DeviceViews}"/>

    <Button
      HorizontalAlignment="Center"
      Margin="10,10,10,10"
      Click="AddDevice">
      Add Device
    </Button>

  </StackPanel>
</UserControl>
