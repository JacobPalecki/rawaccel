<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:userinterface.ViewModels"
        xmlns:v="using:userinterface.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="userinterface.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="userinterface"
        Background="{DynamicResource AppBackgroundBrush}">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Window.Styles>
		<Style Selector="TabControl">
			<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
			<Setter Property="BorderThickness" Value="0"/>
		</Style>

		<Style Selector="TabItem">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
			<Setter Property="Padding" Value="20,15"/>
			<Setter Property="Margin" Value="0"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="Medium"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="BorderBrush" Value="Transparent"/>
			<Setter Property="HorizontalContentAlignment" Value="Left"/>
			<Setter Property="Template">
				<ControlTemplate>
					<Border Name="PART_LayoutRoot"
							Background="{TemplateBinding Background}"
							BorderBrush="{TemplateBinding BorderBrush}"
							BorderThickness="{TemplateBinding BorderThickness}"
							CornerRadius="{TemplateBinding CornerRadius}"
							Padding="{TemplateBinding Padding}">
						<Panel>
							<Border Name="IndicatorBar"
									Width="3"
									CornerRadius="4"
									HorizontalAlignment="Left"
									Background="Transparent"
									IsVisible="False"/>
							<!-- The border is to move the text away from the indicator bar -->
							<Border Margin="15,0,0,0" Background="Transparent">
								<ContentPresenter Name="PART_ContentPresenter"
												  ContentTemplate="{TemplateBinding HeaderTemplate}"
												  Content="{TemplateBinding Header}"
												  HorizontalAlignment="Left"
												  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
												  TextBlock.FontFamily="{TemplateBinding FontFamily}"
												  TextBlock.FontSize="{TemplateBinding FontSize}"
												  TextBlock.FontWeight="{TemplateBinding FontWeight}"
												  TextBlock.Foreground="{TemplateBinding Foreground}"/>
							</Border>
						</Panel>
					</Border>
				</ControlTemplate>
			</Setter>
		</Style>

		<Style Selector="TabItem:pointerover /template/ Border#IndicatorBar">
			<Setter Property="Background" Value="{DynamicResource PrimaryButtonBrush}"/>
			<Setter Property="IsVisible" Value="True"/>
		</Style>

		<Style Selector="TabItem:pointerover">
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
		</Style>

		<Style Selector="TabItem:selected">
			<Setter Property="Background" Value="{DynamicResource PrimaryButtonBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
		</Style>

		<Style Selector="TabItem:selected:pointerover /template/ Border#PART_LayoutRoot">
			<Setter Property="Background" Value="{DynamicResource PrimaryButtonHoverBrush}"/>
		</Style>

		<!-- The ContentPresenter inside the item -->
		<Style Selector="TabItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
			<Setter Property="RenderTransform" Value="scale(1.05)"/>
		</Style>

		<Style Selector="Border.ContentArea">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="Padding" Value="24"/>
			<Setter Property="Margin" Value="16"/>
		</Style>

		<Style Selector="Button.ApplyButton">
			<Setter Property="Background" Value="{DynamicResource PrimaryButtonBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="CornerRadius" Value="6"/>
			<Setter Property="Padding" Value="24,12"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Cursor" Value="Hand"/>
		</Style>

		<Style Selector="Button.ApplyButton:pointerover">
			<Setter Property="Background" Value="{DynamicResource PrimaryButtonHoverBrush}"/>
		</Style>

		<Style Selector="Button.ApplyButton:pressed">
			<Setter Property="Background" Value="{DynamicResource PrimaryButtonPressedBrush}"/>
		</Style>

		<!-- Theme Toggle Button Styles -->
		<Style Selector="ToggleButton.ThemeToggle">
			<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="25"/>
			<Setter Property="Width" Value="50"/>
			<Setter Property="Height" Value="50"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>

		<Style Selector="ToggleButton.ThemeToggle:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource FocusBorderBrush}"/>
		</Style>

		<Style Selector="ToggleButton.ThemeToggle:checked">
			<Setter Property="Background" Value="{DynamicResource PrimaryButtonBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
		</Style>

		<Style Selector="ToggleButton.ThemeToggle:checked:pointerover">
			<Setter Property="Background" Value="{DynamicResource PrimaryButtonHoverBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonHoverBrush}"/>
		</Style>

		<Style Selector="ToggleButton.ThemeToggle:pressed">
			<Setter Property="Background" Value="{DynamicResource PrimaryButtonPressedBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonPressedBrush}"/>
			<Setter Property="RenderTransform" Value="scale(0.95)"/>
		</Style>

		<!-- Transitions -->
		<Style Selector="TabItem /template/ ContentPresenter#PART_ContentPresenter">
			<Setter Property="Transitions">
				<Transitions>
					<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
				</Transitions>
			</Setter>
		</Style>

		<Style Selector="TabItem /template/ Border#IndicatorBar">
			<Setter Property="Transitions">
				<Transitions>
					<DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
		</Style>

		<Style Selector="Button.ApplyButton">
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Background" Duration="0:0:0.15"/>
					<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
				</Transitions>
			</Setter>
		</Style>

		<Style Selector="Button.ApplyButton:pressed">
			<Setter Property="RenderTransform" Value="scale(0.98)"/>
		</Style>

		<Style Selector="ToggleButton.ThemeToggle">
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Background" Duration="0:0:0.2"/>
					<BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
					<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
				</Transitions>
			</Setter>
		</Style>
	</Window.Styles>

	<Panel>
		<TabControl VerticalAlignment="Stretch"
					HorizontalAlignment="Stretch"
					TabStripPlacement="Left">
			<TabControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Width="300" Background="{DynamicResource CardBackgroundBrush}"/>
				</ItemsPanelTemplate>
			</TabControl.ItemsPanel>
			<TabItem Header="Devices">
				<Border Classes="ContentArea">
					<ContentControl Content="{Binding DevicesPage}"/>
				</Border>
			</TabItem>
			<TabItem Header="Mappings">
				<Border Classes="ContentArea">
					<ContentControl Content="{Binding MappingsPage}"/>
				</Border>
			</TabItem>
			<TabItem Header="Profiles">
				<Border Classes="ContentArea">
					<ContentControl Content="{Binding ProfilesPage}"/>
				</Border>
			</TabItem>
		</TabControl>

		<StackPanel VerticalAlignment="Bottom"
					HorizontalAlignment="Left"
					Margin="16"
					Spacing="12">

			<ToggleButton Classes="ThemeToggle"
						  Click="ToggleTheme"
						  Name="ThemeToggleButton"
						  HorizontalAlignment="Center">
				<PathIcon Data="{StaticResource weather_moon_regular}"
						  Width="20"
						  Height="20"
						  Name="ThemeIcon"/>
			</ToggleButton>

			<Button Classes="ApplyButton"
					Width="268"
					Click="ApplyButtonHandler">
				Apply Settings
			</Button>

		</StackPanel>
	</Panel>
</Window>
